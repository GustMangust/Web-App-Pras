@model CourceProject.ViewModel.EditFanficViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<head>


    <link rel="stylesheet" href="~/css/site.css" />
    <link type="text/css" rel="stylesheet" href="~/css/all-fanfics.css" />
    <link type="text/css" rel="stylesheet" href="~/css/add-fanfic.css" />
    @section Scripts{

        <script src="Scripts/jquery-3.6.0.js"></script>
        <script src="Scripts/jquery-3.6.0.min.js"></script>
        <script>
                $(document).ready(function () {
                    var a = document.getElementById("textarea");

                    a.innerHTML = '@ViewBag.Fanfic.Description';
                });
        </script>
    }

</head>
<div class="row justify-content-md-center" style="margin-top:40px">
    <div class="fanfic-block col-md-auto">
        <form method="post" style="width:48rem">
            <div class="form-group">
                <h5 class="input-text">@Localizer["Title"]</h5>
                <input asp-for="Title" value="@ViewBag.Fanfic.Title" class="form-control" />
            </div>

            <div class="form-group">
                <h5 class="input-text">@Localizer["Description"]</h5>
                <textarea id="textarea" asp-for="Description" class="form-control"></textarea>

            </div>
            <div class="form-group">
                <h5 class="input-text">@Localizer["Fandom"]</h5>
                @Html.DropDownListFor(model => model.FandomId, ViewBag.Id as SelectList)
            </div>
            <div class="form-group">
                <h5 class="input-text">@Localizer["TagsExample"]</h5>
                <input asp-for="Tags" value="@ViewBag.Tags" class="form-control" />
            </div>


            <input asp-for="UserId" value="@ViewBag.Fanfic.User_Id" type="hidden" />
            <input asp-for="Id" value="@ViewBag.Fanfic.Id" type="hidden" />
            <button type="submit" class="material-icons chapter-add button-hover add-fanfic">add_circle</button>
        </form>
    </div>
</div>
